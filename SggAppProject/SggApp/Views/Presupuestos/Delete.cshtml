@model SggApp.Models.PresupuestoViewModel
@{
    ViewData["Title"] = "Eliminar Presupuesto";
}

<div class="container mt-4">
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">¡Atención!</h4>
        <p>¿Estás seguro de que deseas eliminar este presupuesto?</p>
        <hr>
        <p class="mb-0">Esta acción no se puede deshacer.</p>
    </div>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Detalles del Presupuesto a Eliminar</h3>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CategoriaNombre)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CategoriaNombre)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.MonedaCodigo)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MonedaCodigo)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Limite)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Limite)
                </dd>
            </dl>
        </div>

        <div class="card-footer">
            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash-fill"></i> Confirmar Eliminación
                </button>

                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>