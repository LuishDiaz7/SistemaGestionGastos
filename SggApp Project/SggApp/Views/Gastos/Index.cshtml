@model IEnumerable<SggApp.Models.GastoViewModel>
@{
    ViewData["Title"] = "Mis Gastos";
}

<div class="container mt-4">
    <h1 class="mb-3">@ViewData["Title"]</h1>

    <!-- Botón de creación -->
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Registrar Nuevo Gasto
        </a>
    </p>

    <!-- Tabla de gastos -->
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                    <th>@Html.DisplayNameFor(model => model.CategoriaNombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                    <th>@Html.DisplayNameFor(model => model.Lugar)</th>
                    <th class="text-end">@Html.DisplayNameFor(model => model.Monto)</th>
                    <th>@Html.DisplayNameFor(model => model.MonedaCodigo)</th>
                    <th>@Html.DisplayNameFor(model => model.EsRecurrente)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                        <td>@item.CategoriaNombre</td>
                        <td>@item.Descripcion</td>
                        <td>@item.Lugar</td>
                        <td class="text-end">@item.Monto.ToString("C2")</td>
                        <td>@item.MonedaCodigo</td>
                        <td class="text-center">
                            @if (item.EsRecurrente)
                            {
                                <span class="badge bg-success">Sí</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" title="Editar">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" title="Detalles">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
