@model SggApp.Models.CategoriaViewModel
@{
    ViewData["Title"] = "Eliminar Categoría";
}

<div class="container mt-4">
    <div class="alert alert-danger shadow-sm">
        <div class="d-flex align-items-center">
            <i class="bi bi-exclamation-octagon-fill fs-3 me-3"></i>
            <div>
                <h4 class="alert-heading mb-1">¿Eliminar esta categoría?</h4>
                <p class="mb-0">Esta acción eliminará permanentemente el registro.</p>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title"><i class="bi bi-trash-fill me-2"></i>Confirmar Eliminación</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3">Descripción:</dt>
                <dd class="col-sm-9">@(Model.Descripcion ?? "Sin descripción")</dd>

                <dt class="col-sm-3">Estado actual:</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.Activa ? "bg-success" : "bg-secondary")">
                        @(Model.Activa ? "Activa" : "Inactiva")
                    </span>
                </dd>
            </dl>

            <div class="alert alert-warning mt-4">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>¡Atención!</strong> Esta acción no se puede deshacer.
                @if (ViewBag.GastosRelacionados > 0)
                {
                    <div class="mt-2">
                        <i class="bi bi-chevron-right"></i>
                        Existen @ViewBag.GastosRelacionados gastos asociados a esta categoría.
                    </div>
                }
            </div>
        </div>
        <div class="card-footer">
            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash-fill"></i> Confirmar Eliminación
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
