@model SggApp.Models.MonedaViewModel
@{
    ViewData["Title"] = "Detalles de Moneda";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h2><i class="bi bi-currency-exchange"></i> @ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Código:</dt>
                <dd class="col-sm-9 fw-bold">@Model.Codigo</dd>

                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3">Símbolo:</dt>
                <dd class="col-sm-9">@(Model.Simbolo ?? "No especificado")</dd>

                <dt class="col-sm-3">Estado:</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.Activa ? "bg-success" : "bg-secondary")">
                        @(Model.Activa ? "Activa" : "Inactiva")
                    </span>
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">
                    <i class="bi bi-pencil"></i> Editar
                </a>
            </div>
        </div>
    </div>
</div>
