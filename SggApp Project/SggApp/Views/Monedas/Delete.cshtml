@model SggApp.Models.MonedaViewModel
@{
    ViewData["Title"] = "Eliminar Moneda";
}

<div class="container mt-4">
    <div class="alert alert-danger">
        <h4><i class="bi bi-exclamation-triangle-fill"></i> ¿Eliminar esta moneda?</h4>
        <p>Esta acción no se puede deshacer y afectará a todos los registros asociados.</p>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Código:</dt>
                <dd class="col-sm-9">@Model.Codigo</dd>

                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>
            </dl>

            <div class="alert alert-warning">
                <i class="bi bi-info-circle-fill"></i>
                <strong>¡Atención!</strong>
                @if (ViewBag.EnUso)
                {
                    <span>Esta moneda está siendo utilizada por @ViewBag.RegistrosAsociados registro(s).</span>
                }
            </div>
        </div>
        <div class="card-footer">
            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash-fill"></i> Confirmar Eliminación
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>