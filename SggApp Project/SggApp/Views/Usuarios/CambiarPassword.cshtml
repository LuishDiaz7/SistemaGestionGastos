@model SggApp.Models.CambiarPasswordViewModel
@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-white">
                    <h2><i class="bi bi-shield-lock"></i> @ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form asp-action="CambiarPassword" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="PasswordActual" class="form-label"></label>
                            <input asp-for="PasswordActual" type="password" class="form-control" />
                            <span asp-validation-for="PasswordActual" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NuevoPassword" class="form-label"></label>
                            <input asp-for="NuevoPassword" type="password" class="form-control" />
                            <span asp-validation-for="NuevoPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmarPassword" class="form-label"></label>
                            <input asp-for="ConfirmarPassword" type="password" class="form-control" />
                            <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning text-white">
                                <i class="bi bi-key"></i> Actualizar Contraseña
                            </button>
                            <a asp-action="Perfil" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Volver al Perfil
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
